<UserControl x:Class="noodling.usercontrols.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:noodling.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Width="40" Background="LightGray" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12"/>
            <RowDefinition Height="12"/>
        </Grid.RowDefinitions>
        <TextBox 
            Margin="2"
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.RowSpan="2" 
            VerticalAlignment="Center" 
            Text="{Binding Number}" 
            PreviewTextInput="TextBox_PreviewTextInput"/>
        <Button Grid.Row="0" Grid.Column="2" Width="18" Click="Button_UpClick" >
            <Label Content="^"/>
        </Button>
        <Button Grid.Row="1" Grid.Column="2" Width="18" Click="Button_DownClick">
            <Label Content="v"/>
        </Button>
    </Grid>
</UserControl>
